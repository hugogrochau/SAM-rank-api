{
  "name": "sam-rank-api",
  "version": "0.0.1",
  "description": "API for the South American rocket league ranking",
  "main": "dist",
  "scripts": {
    "dev": "nodemon -w src --exec \"babel-node src\"",
    "build": "babel src -s -D -d dist --ignore node_modules",
    "start": "node dist",
    "prestart": "npm run -s build",
    "test": "NODE_ENV=test mocha --compilers js:babel-register --reporter spec",
    "docs": "apidoc -i src/api -o apidoc/",
    "migrate": "knex migrate:latest --env development"
  },
  "apidoc": {
    "name": "sam-rank-api",
    "version": "0.0.1",
    "description": "API for the South American rocket league ranking",
    "apidoc": {
      "title": "API for the South American rocket league ranking",
      "url": "https://127.0.0.1:8080/api/v1/"
    }
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hugogrochau/SAM-rank-api.git"
  },
  "author": "Hugo Grochau <hugo@grochau.com>",
  "license": "MIT",
  "dependencies": {
    "async": "^2.1.2",
    "body-parser": "^1.13.3",
    "bookshelf": "^0.10.2",
    "compression": "^1.5.2",
    "cors": "^2.7.1",
    "dotenv": "^4.0.0",
    "express": "^4.13.3",
    "express-validator": "^3.1.2",
    "got": "^6.5.0",
    "jsonapi-mapper": "^1.0.0-beta.8",
    "knex": "^0.12.5",
    "lodash": "^4.16.4",
    "pg": "^6.1.0",
    "resource-router-middleware": "^0.5.1",
    "validator": "^6.2.1"
  },
  "devDependencies": {
    "apidoc": "^0.17.0",
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-http": "^3.0.0",
    "eslint": "^3.1.1",
    "mocha": "^3.2.0",
    "nodemon": "^1.9.2",
    "sqlite3": "^3.1.8"
  },
  "keywords": [
    "south",
    "america",
    "rocket",
    "league",
    "rank",
    "leaderboard"
  ]
}
